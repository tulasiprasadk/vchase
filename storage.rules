rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Advertisements folder: public read, restricted write to admin roles
    match /advertisements/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && (request.auth.token.role == "admin" || request.auth.token.role == "super_admin");
    }

    // Default: public read, no client writes
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
